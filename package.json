{
  "name": "surveyflow",
  "version": "1.0.0",
  "description": "A full-stack survey platform for creating, distributing, and analyzing surveys",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:local": "concurrently \"npm run dev:backend:local\" \"npm run dev:frontend\"",
    "dev:backend:local": "cd backend && npm run start:dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start:prod",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "setup:local": "npm run install:all && echo 'Please run setup-database.sql in your PostgreSQL'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
